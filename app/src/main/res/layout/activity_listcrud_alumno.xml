<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".AdminMenu.ListCrudAdmin.listcrudAlumno">

    <LinearLayout
        android:id="@+id/main_container_list_alumno"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloListaAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de alumnos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloListaAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantén presionado un alumno para editar o eliminar."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="10dp" />

        <!-- CABECERA TIPO TABLA -->
        <LinearLayout
            android:id="@+id/header_row_alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="#1AFFA726">

            <TextView
                android:id="@+id/tvHeaderNombreAlumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#444444"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvHeaderApodoAlumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Apodo"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#444444"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvHeaderCursoAlumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Curso"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#444444"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvHeaderEdadAlumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Edad"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#444444"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvHeaderCorreoAlumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Correo"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#444444"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- DIVISOR CABECERA / LISTA -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="6dp" />

        <!-- LISTA DE ALUMNOS -->
        <ListView
            android:id="@+id/lvAlumnos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#FFE0B2"
            android:dividerHeight="1dp"
            android:padding="6dp"
            android:background="#FFFDF7" />

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverDesdeListaAlumnos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:rippleColor="#CC7A00"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
