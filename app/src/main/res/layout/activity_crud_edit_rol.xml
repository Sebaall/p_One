<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMenu.CrudAdmin.crudEditRol"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCrudEditRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar rol de usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubTituloCrudEditRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un usuario y asigna el menú que le corresponde en P-One."
            android:textSize="13sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="14dp" />

        <!-- SELECCIONAR USUARIO (LABEL TIPO PERMISO) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSeleccionUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USUARIO"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#7A7A7A"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinnerUsuario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="6dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAyudaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elige al usuario por su nombre o correo."
            android:textSize="11sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <!-- DATOS DEL USUARIO EN TARJETA -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDatosUsuarioTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATOS DEL USUARIO"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#7A7A7A"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/containerDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFF3E0"
            android:layout_marginTop="6dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: -"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCorreoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: -"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRolActualUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rol actual: -"
                android:layout_marginTop="4dp"
                android:textColor="#FFA726"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- NUEVO ROL -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNuevoRolTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVO ROL (MENÚ)"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#7A7A7A"
            android:textSize="12sp"
            android:layout_marginTop="18dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNuevoRolAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona el menú principal que verá este usuario al iniciar sesión."
            android:textSize="11sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <Spinner
            android:id="@+id/spinnerNuevoRol"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="6dp" />

        <!-- BOTONES ORDENADOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverEditRol"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:onClick="menubacks"
                android:text="Volver"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#B0BEC5"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAplicarRol"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="Aplicar rol"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:onClick="aplicarRolUsuarioOnClick"
                app:backgroundTint="#FFA726"
                app:rippleColor="#CC7A00"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressEditRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
