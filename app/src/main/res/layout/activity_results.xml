<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".MenuAlumno.Results">

    <ScrollView
        android:id="@+id/scrollResultados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/cardResultados"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#CCFFFFFF"
                android:elevation="4dp"
                android:clipToPadding="false">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTituloResultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resumen de tu partida"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSubtituloResultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revisa tu desempeño en el juego de matemáticas."
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFE0B2"
                    android:layout_marginBottom="16dp" />

                <!-- Apodo / Alumno -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvApodoResultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alumno: -"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Resumen corto tipo: "Aciertos: 7/10 (70%)" -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvResumenResultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultados del juego"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <!-- Detalle con texto largo -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDetalleResultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp" />

                <!-- Línea separadora antes del botón -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFE0B2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerRanking"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Ver ranking"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#FFA726"
                    app:rippleColor="#CC7A00"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
