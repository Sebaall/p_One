<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".AdminMenu.ListCrudAdmin.listcrudCurso">

    <LinearLayout
        android:id="@+id/main_container_list_curso"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloListaCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de cursos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloListaCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantén presionado un curso para editar o eliminar."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="8dp" />

        <!-- CABECERA TABLA: CURSO / PROFESOR -->
        <LinearLayout
            android:id="@+id/headerCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:gravity="center_vertical"
            android:background="#FFF3E0">

            <!-- CURSO -->
            <TextView
                android:id="@+id/tvHeaderCurso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Curso"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center_vertical" />

            <!-- PROFESOR -->
            <TextView
                android:id="@+id/tvHeaderProfesor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Profesor"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- SEPARADOR ENTRE CABECERA Y LISTA -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="4dp" />

        <!-- LISTVIEW CURSOS (usa el item con tvFilaCurso y tvFilaProfesor) -->
        <ListView
            android:id="@+id/lvCursos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#00FFFFFF"
            android:dividerHeight="0dp" />

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverDesdeListaCursos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:onClick="ba"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
