<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".Main.Bienvenidas.bienvenidaScreen">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TITULO BIENVENIDA -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Alumno"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- SUBTITULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBienvenidaSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prepárate para poner a prueba tus habilidades matemáticas."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="18dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="20dp" />

        <!-- BOTÓN JUGAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJugar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Comenzar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#FFA726"
            app:rippleColor="#CC7A00"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
