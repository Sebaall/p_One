<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NOMBRE -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del rol"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DESCRIPCIÓN -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginTop="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDescripcionRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:minLines="2"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PERMISOS -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permisos (menús):"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupPermisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:selectionRequired="false"
            android:layout_marginTop="6dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAlumnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú Alumnos"
                android:checkable="true"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProfesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú Profesor"
                android:checkable="true"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú Admin"
                android:checkable="true"
                app:checkedIconVisible="true" />
        </com.google.android.material.chip.ChipGroup>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:text="Volver"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FFA726"
                app:rippleColor="#CC7A00"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:text="Guardar rol"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FFA726"
                app:rippleColor="#CC7A00"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
