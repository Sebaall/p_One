<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuAdmin"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRol"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdRoles"
            android:text="Rol"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAlumno"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdAlumno"
            android:text="Alumno"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfesor"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdProfesor"
            android:text="Profesor"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdmin"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdAdmin"
            android:text="Administrador"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCursos"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdCursos"
            android:text="Cursos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
